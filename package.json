{
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "npm run build:css && remix build",
		"build:css": "tailwindcss -i ./styles/tailwind.css -o ./app/styles/app.css --minify",
		"dev": "concurrently \"npm run dev:css\" \"npm run dev-remix\"",
		"dev:css": "tailwindcss -i ./styles/tailwind.css -o ./app/styles/app.css --watch",
		"netlify-dev": "cross-env NODE_ENV=development netlify dev",
		"netlify-start": "cross-env NODE_ENV=production netlify dev"
	},
	"dependencies": {
		"@netlify/functions": "^1.0.0",
		"@remix-run/netlify": "^1.6.5",
		"@remix-run/node": "^1.6.5",
		"@remix-run/react": "^1.6.5",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"twitter-api-v2": "^1.12.3"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.6.5",
		"@remix-run/eslint-config": "^1.6.5",
		"@remix-run/serve": "^1.6.5",
		"@types/react": "^17.0.45",
		"@types/react-dom": "^17.0.17",
		"autoprefixer": "^10.4.7",
		"concurrently": "^7.2.2",
		"eslint": "^8.15.0",
		"postcss": "^8.4.14",
		"rmx-cli": "^0.2.2",
		"tailwindcss": "^3.1.6",
		"typescript": "^4.7.4"
	},
	"engines": {
		"node": ">=14"
	}
}
